<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SwiftlyExercise" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/light_gray</item>
    </style>


    <style name="Pricing">
        <item name="android:textSize">@dimen/xx_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Pricing.Sale">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Pricing.Sale.XLarge">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/x_large</item>
    </style>

    <style name="Pricing.List">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Pricing.List.XLarge">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/x_large</item>
    </style>


    <style name="TextPrimary">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextPrimary.Small">
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="TextPrimary.Medium">
        <item name="android:textSize">@dimen/medium</item>
    </style>

    <style name="TextPrimary.Large">
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="TextPrimary.XLarge">
        <item name="android:textSize">@dimen/x_large</item>
    </style>

</resources>